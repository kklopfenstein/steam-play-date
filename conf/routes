# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /register                   controllers.Application.register()
POST    /reguser		            controllers.Application.registerUser()
POST    /login		            	controllers.Application.login()
GET     /startLogin            		controllers.Application.startLogin()
GET		/logout						controllers.Application.logout()
GET		/newPlayDate				controllers.Application.newPlayDate()
POST	/createPlayDate				controllers.Application.createPlayDate()
GET		/removePlayDate				controllers.Application.removePlayDate(id: Long)
GET		/editPlayDate				controllers.Application.editPlayDate(id: Long)
POST	/doEditPlayDate				controllers.Application.doEditPlayDate()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
